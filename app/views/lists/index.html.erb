<h1>To-Do Lists</h1>

<% if @lists.any? %>
	<ul>
		<% @lists.each do |list| %>
		<li>
			<%= link_to list.name, list_path(list) %>
		</li>
		<% end %>
	</ul>
<% else %>
	<h3>No lists found. Please create one!</h3>
<% end %> 

<%= link_to 'New List', new_list_path %> |

<%= link_to 'All Items', items_path %>