<% require 'pry' %>

<h1>Create a new item</h1>

<%= form_for @item do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :description %>
	<%= f.text_field :description %>	

	 <!-- f.hidden_field :list_id, :value => params[:id] %> -->
	<%= f.label :list_id %>
	<%= f.text_field :list_id %>


	<%= f.submit %>
<% end %>